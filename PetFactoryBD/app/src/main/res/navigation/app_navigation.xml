<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.petfactorybd.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_storeFragment"
            app:destination="@id/storeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>

    <fragment
        android:id="@+id/storeFragment"
        android:name="com.example.petfactorybd.fragments.StoreFragment"
        tools:layout="@layout/fragment_store" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.petfactorybd.fragments.login.LoginFragment"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_createUserFragment"
            app:destination="@id/createUserFragment" />
    </fragment>

    <fragment
        android:id="@+id/createUserFragment"
        android:name="com.example.petfactorybd.fragments.login.CreateUserFragment"
        tools:layout="@layout/fragment_create_user" />

    <fragment
        android:id="@+id/configurationFragment"
        android:name="com.example.petfactorybd.fragments.ConfigurationFragment"
        tools:layout="@layout/fragment_configuration" />

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.petfactorybd.fragments.game.GameFragment"
        tools:layout="@layout/fragment_game" />
</navigation>
